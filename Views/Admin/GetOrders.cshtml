                                    }
                                </div>
                            </div>

                            <div class="isotope-item notcomplete">

                                <div class="order-list-container">
                                    @foreach (var item in ViewBag.notComplete)
                                    {
                                        <div class="bg-white card mb-4 order-list shadow-sm">
