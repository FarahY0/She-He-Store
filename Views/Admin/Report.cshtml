@model IEnumerable<HomePage>
@{
    ViewData["Title"] = "Report";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="https://cdn.datatables.net/1.11.1/css/jquery.dataTables.min.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/buttons/2.0.0/css/buttons.dataTables.min.css" rel="stylesheet" />

<h2 style="margin-top:30px !important">Reports</h2>

<style>
    td {
    text-align:center;
    }
</style>


<br />
<br />
<div class="row mb-5">
    <div class="col-12">
        <form action="Report" method="post" class="form-inline">
            <div class="form-group col-4">
                <input type="date" name="startDate" class="form-control" placeholder="Start Date" style="width:100%"/>
            </div>
            <div class="form-group col-4">
                <input type="date" name="endDate" class="form-control" placeholder="End Date" style="width:100%" />
            </div>
            <div class="col-2">
                <button type="submit" class="btn btn-dark">Search</button>
            </div>
        </form>
    </div>
</div>



<table class="table example">
    <thead style="background-color:#4747a1 ;color:white">

        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Product Name</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
            <th scope="col">Total Price</th>
            <th scope="col">Category Name</th>
            <th scope="col">Product Image</th>
            <th scope="col">Order Date</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Userr.Fname
                </td>
                <td> @item.Userr.Lname </td>
                <td> @item.Product.Productname </td>
                <td> @item.Itorder.Quantity </td>
                <td> @item.Itorder.Itemprice </td>
                <td> @(item.Itorder.Itemprice * item.Itorder.Quantity) </td>
                <td> @item.Category.Categoryname </td>

                <td>
                    <img src=@Url.Content("~/Images/" + item.Product.Imagepath)
                         asp-append-version="true" style="border-radius:20% ; height:100px; width:100px;"
                         width="130px" height="130px" />
                </td>
                <td> @item.Itorder.Order.Orderdate </td>

            </tr>
        }

    </tbody>
</table>




<br />
<br />



<script src="https://code.jquery.com/jquery-3.5.1.js"></script>

<script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>



<script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>

<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>

<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>

<script>

    $(document).ready(function () {

        $('.example').DataTable({

            dom: 'Bfrtip',

            buttons: [

                'copyHtml5',

                'excelHtml5',

                'csvHtml5',

                'pdfHtml5'

            ]

        });
    });

</script>

