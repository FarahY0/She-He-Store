@model IEnumerable<Product>
@{
    ViewData["Title"] = "GetProductsByCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<!-- ##### Breadcrumb Area Start ##### -->
<div class="breadcrumb-area">
    <!-- Top Breadcrumb Area -->
    <div class="top-breadcrumb-area bg-img bg-overlay d-flex align-items-center justify-content-center" style="background-image: url('../../img/bg-img/24.jpg');">
        <h2>Shop</h2>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#"><i class="fa fa-home"></i> Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Shop</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<!-- ##### Breadcrumb Area End ##### -->
<!-- ##### Shop Area Start ##### -->
<section class="shop-page section-padding-0-100">
    <div class="container">

        <div class="row">
            <!-- Sidebar Area -->
            <div class="col-12 col-md-4 col-lg-3">
                <div class="shop-sidebar-area">

                </div>
            </div>

            <!-- All Products Area -->
            <div class="col-12 col-md-8 col-lg-9">
                <div class="shop-products-area" id="productListing">
                    <div class="row">

                        <!-- Single Product Area -->
                       
                        @foreach(var item in Model){
                            <div class="col-12 col-sm-6 col-lg-4">
                                <div class="single-product-area mb-50">
                                    <!-- Product Image -->
                                    <div class="product-img">
                                        <a asp-action="ProductDetails" asp-controller="Home" asp-route-id="@item.Productid"><img src="@Url.Content("~/Images/"+item.Imagepath)" alt=""></a>
                                    </div>
                                    <!-- Product Info -->
                                    <div class="product-info mt-15 text-center">
                                        <a asp-action="ProductDetails" asp-controller="Home" asp-route-id="@item.Productid">
                                            <p>@item.Productname</p>
                                        </a>
                                        <h6>$@item.Price</h6>
                                    </div>
                                </div>
                            </div>
                        }
                     

                          
                        </div>

                       
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Shop Area End ##### -->

